{
  "name": "hazeljs-starter",
  "version": "0.1.0",
  "description": "HazelJS Starter Application",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsc --watch & nodemon dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@hazeljs/auth": "^0.2.0-beta.16",
    "@hazeljs/config": "^0.2.0-beta.16",
    "@hazeljs/core": "^0.2.0-beta.16",
    "@hazeljs/prisma": "^0.2.0-beta.16",
    "@hazeljs/swagger": "^0.2.0-beta.16",
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.17.50",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
